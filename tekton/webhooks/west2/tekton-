apiVersion: triggers.tekton.dev/v1beta1
kind: TriggerTemplate
metadata:
  name: multisite-triggertemplate
spec:
  params:
    - name: revision
      description: The git revision
      default: master
    - name: url
      description: The git repository url
  resourcetemplates:
    - apiVersion: tekton.dev/v1beta1
      kind: PipelineResource
      metadata:
        name: multisite-$(uid)
      spec:
        type: git
        params:
        - name: revision
          value: master
        - name: url
          value: https://github.com/redhat-et/ceph-mirroring.git
    - apiVersion: tekton.dev/v1beta1
      kind: PipelineRun
      metadata:
        name: wordpress-pipeline-run-$(uid)
        generateName: wordpress-deploy-
      spec:
        pipelineRef:
          name: deploy-pipeline
        resources:
          - name: git-source
            resourceRef:
              name: multisite-$(uid)
        params:
          - name: pathToYamlFile
            value: "application/wordpress/overlays/west1"
        serviceAccountName: pipeline
---
apiVersion: triggers.tekton.dev/v1alpha1
kind: TriggerBinding
metadata:
  name: deploy-pipelinebinding
spec:
  params:
    - name: revision
      value: $(body.head_commit.id)
    - name: url
      value: $(body.repository.url)
---
apiVersion: triggers.tekton.dev/v1alpha1
kind: EventListener
metadata:
  name: webhook
spec:
  serviceAccountName: pipeline
  triggers:
  - bindings:
    -  name: deploy-pipelinebinding
    template:
       name: multisite-triggertemplate
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  labels:
    app.kubernetes.io/managed-by: EventListener
    app.kubernetes.io/part-of: Triggers
    eventlistener: webhook
  name: wordpress-deployer
spec:
  port:
    targetPort: 8080
  tls:
    termination: edge
  to:
    kind: Service
    name: el-webhook
    weight: 100
